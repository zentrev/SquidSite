@using SquidSite.Models
@model Product


@{
    Layout = "_mainLayout";
}

@section ExtraHeadStuff{
    <script src="~/Javascript/ScrollingGallery.js"></script>
    <link href="~/Style/SlideShow.css" rel="stylesheet" />
    <link href="~/Style/ItemInfoPage.css" rel="stylesheet" />
}

<div id="MainProductContainer">
    <div id="ProductImages">
        <div id="inlineBlockBoi">
            <div class="w3-col s4">
                <img class="demo w3-opacity w3-hover-opacity-off" src="~/Images/RetroGame.jpg" style="width:200px;height:200px;cursor:pointer" onclick="currentSlide(1)">
            </div>
            <div class="w3-col s4">
                <img class="demo w3-opacity w3-hover-opacity-off" src="~/Images/PoshVideo.mp4" style="width:200px;height:200px;cursor:pointer" onclick="currentSlide(2)">
            </div>
            <div class="w3-col s4">
                <img class="demo w3-opacity w3-hover-opacity-off" src="~/Images/Cat.jpg" style="width:200px;height:200px;cursor:pointer" onclick="currentSlide(3)">
            </div>
        </div>
        <div id="ScrollingImages">
            <!-- Slideshow container -->
            <div class="slideshow-container">
                <!-- Full-width images with number and caption text -->
                <div class="mySlides fade">
                    <div class="numbertext">1 / 3</div>
                    <img src="~/Images/RetroGame.jpg" style="width:600px;height:600px">
                    <div class="text">Caption Text</div>
                </div>
                <div class="mySlides fade">
                    <div class="numbertext">2 / 3</div>
                    <video controls="controls" style="width:600px;height:600px">
                        <source src="~/Images/PoshVideo.mp4" type="video/mp4" />
                    </video>
                    <div class="text">Caption Two</div>
                </div>
                <div class="mySlides fade">
                    <div class="numbertext">3 / 3</div>
                    <img src="~/Images/Cat.jpg" style="width:600px;height:600px">
                    <div class="text">Caption Three</div>
                </div>
                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </div>
            <br>
            <!-- The dots/circles -->
            <div style="text-align:center">
                <span class="dot" onclick="currentSlide(1)"></span>
                <span class="dot" onclick="currentSlide(2)"></span>
                <span class="dot" onclick="currentSlide(3)"></span>
            </div>
        </div>
    </div>
    <div id="ProductInformation">
        <!--Display all product information here, size selector if product is of Merch, cost, title etc.-->
        @if (Model != null)
        {
            <p>@Model.Title</p>
            <p>@Model.Description</p>
            <p>@Model.Cost</p>
            @switch (Model.ProductType)
            {
                case Product.eProductType.GAME:
                    <p>@Model.DownloadLink</p>
                    <br />
                    <p>@Model.DemoLink</p>
                    <br />
                    <p>@Model.DemoDownloadLink</p>
                    break;
                case Product.eProductType.MERCH:
                    <p>@Model.MerchTags</p>
                    <br />
                    <p>@Model.MerchSize</p>
                    break;
            }
        }
    </div>
</div>